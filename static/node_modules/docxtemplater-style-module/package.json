{
  "name": "docxtemplater-style-module",
  "version": "3.3.1",
  "description": "Style Module for docxtemplater",
  "main": "js/index.js",
  "scripts": {
    "babel": "babel es6 --out-dir js",
    "browserify": "npm run browserify:test && npm run browserify:lib",
    "browserify:lib": "browserify -r ./js/index.js --global-transform aliasify -s DocxtemplaterStyleModule > build/style-module.js",
    "browserify:test": "mkdirp browser build && browserify -r ./js/test.js -s StyleModuleTest > browser/test.js",
    "compile": "npm run convertto:es5",
    "convertto:es5": "rimraf js -rf && mkdirp js && npm run babel",
    "convertto:es5:watch": "npm run babel -- --watch",
    "lint": "eslint_d .",
    "lint:fix": "eslint_d . --fix",
    "test:firefox": "BROWSER=FIREFOX ./webdriver.bash",
    "test:chrome": "BROWSER=CHROME ./webdriver.bash",
    "mocha": "mocha js/test.js",
    "mocha:es6": "mocha es6/test.js",
    "preversion": "rimraf js build browser && npm run lint && npm run test && npm run browserify && npm run uglify:lib && npm run test:firefox",
    "test": "npm run compile && npm run mocha",
    "test:es6": "npm run mocha:es6",
    "uglify:lib": "uglifyjs build/style-module.js > build/style-module.min.js"
  },
  "private": true,
  "keywords": [
    "docx",
    "generation"
  ],
  "aliasify": {
    "aliases": {
      "xmldom": "./node_modules/docxtemplater/js/browser-versions/xmldom.js",
      "fs": "./node_modules/docxtemplater/js/browser-versions/fs.js"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@wdio/cli": "^6.1.16",
    "aliasify": "^2.1.0",
    "angular-expressions": "^1.1.1",
    "babel-eslint": "^10.1.0",
    "browserify": "^16.5.0",
    "chai": "^4.2.0",
    "eslint-plugin-dependencies": "^2.4.0",
    "eslint_d": "^8.1.0",
    "finalhandler": "^1.1.2",
    "mkdirp": "^1.0.3",
    "mocha": "^7.1.0",
    "mustache": "^4.0.1",
    "pizzip": "^3.0.6",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "selenium-standalone": "^6.17.0",
    "serve-static": "^1.14.1",
    "uglify-js": "^3.9.4",
    "webdriverio": "^6.1.16",
    "xmldom": "^0.3.0"
  },
  "dependencies": {
    "docxtemplater": "^3.17.9",
    "lodash": "^4.17.15"
  },
  "directories": {
    "example": "examples"
  },
  "author": "",
  "license": "SEE LICENSE IN https://docxtemplater.com/PRO-LICENSE"
}
